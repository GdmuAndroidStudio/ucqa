<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_white"
    >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin5"
                android:paddingTop="@dimen/margin5"
                >
                <com.dawnlightning.ucqa.widget.ProcessImageView
                    android:id="@+id/piv_consult_picture"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_height="230dp"
                    android:adjustViewBounds="true"
                    />
                <TextView
                    android:id="@+id/iv_consult_picture_delete"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="删除"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/blue_button_background"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_alignLeft="@id/piv_consult_picture"
                    android:layout_alignRight="@id/piv_consult_picture"/>
                <TextView
                    android:id="@+id/et_consult_picture_title"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"

                    android:textColor="@color/white"
                    android:text="描述"
                    android:layout_marginBottom="@dimen/margin5"
                    android:background="@drawable/blue_button_background"
                    android:textSize="15sp"
                    android:layout_above="@id/iv_consult_picture_delete"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:layout_alignLeft="@id/piv_consult_picture"
                    android:layout_alignRight="@id/piv_consult_picture" />
            </RelativeLayout>
</android.support.v7.widget.CardView>