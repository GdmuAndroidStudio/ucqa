<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@mipmap/bg_white"
    >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <com.dawnlightning.ucqa.widget.ProcessImageView
                    android:id="@+id/piv_consult_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/iv_consult_picture_delete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_delete"
                    android:scaleType="center"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/piv_consult_picture"
                    android:layout_centerHorizontal="true" />
                <com.dawnlightning.ucqa.widget.PictureTitleEdittext
                    android:background="@null"
                    android:id="@+id/et_consult_picture_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="请输入图片描述"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:textSize="16.0sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/piv_consult_picture"
                    android:layout_alignRight="@id/piv_consult_picture" />
            </RelativeLayout>
</android.support.v7.widget.CardView>