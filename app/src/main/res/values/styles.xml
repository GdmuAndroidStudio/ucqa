<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/green</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="SmallGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <style name="NormalGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

</resources>
